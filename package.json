{
  "name": "u-os-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "seed": "npm run seed -w packages/database",
    "dev:backend": "npm run start:dev -w apps/backend",
    "dev:mobile": "npm run start -w apps/mobile"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "@types/node": "^20.10.6"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}